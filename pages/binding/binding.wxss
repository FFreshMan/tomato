/* pages/binding/binding.wxss */
.binding{
  display: flex;
  height: 100vh;
  flex-direction: column;
}
.binding .title{
  font-size: 32rpx;
  margin-top: 83rpx;
  margin-left: 44rpx;
  margin-bottom: 21rpx;
  position: relative;
  padding: 7px 0;
  width: 172rpx;
}
.binding .title::after{
  position: absolute;
  content: '';
  width: 110%;
  height: 10rpx;
  background-color: #FFDCCF;
  bottom: 20rpx;
  left: 50%;
  transform: translateX(-50%);
  z-index: -1;
}
.input-wrapper{
  padding:0 55rpx;
}
.input-wrapper >input{
  border: 2rpx solid #F6705A;
  padding: 16rpx 32rpx;
  border-radius: 16rpx;
  color: #333;
  margin: 56rpx 0;
  font-size: 24rpx;
}
.tips{
  color: #F6705A;
  font-size: 24rpx;
  text-align: center;
  margin-top: 48rpx;
  box-sizing: border-box;
}
.bg{
  width: 100%;
  position: absolute;
  bottom: 0;
  left: 0;
}